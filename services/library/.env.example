# Database connection (PostgreSQL)
DATABASE_URL=postgres://postgres:your-password@postgres:5432/library

# Payload secret (min. 32 characters, generate with: openssl rand -hex 32)
PAYLOAD_SECRET=your-secret-key-at-least-32-characters

# Default locale for admin UI (en, de, fr, es, it, nl, pl, pt)
PAYLOAD_DEFAULT_LOCALE=en

# PostgreSQL credentials (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password
POSTGRES_DB=library