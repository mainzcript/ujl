{
	"name": "@ujl-framework/library",
	"private": true,
	"description": "UJL Library â€“ Asset management service for the UJL Framework",
	"type": "module",
	"scripts": {
		"build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
		"check": "tsc --noEmit --project tsconfig.check.json",
		"clean": "rimraf .next .tsbuildinfo",
		"clean:hard": "pnpm run clean && docker-compose down -v && rimraf uploads",
		"dev": "concurrently -n db,payload -c blue,green \"pnpm run dev:db\" \"pnpm run dev:payload\"",
		"dev:db": "docker-compose up postgres",
		"dev:payload": "cross-env NODE_OPTIONS=--no-deprecation next dev",
		"devsafe": "rm -rf .next && pnpm run dev",
		"format": "prettier --write .",
		"generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
		"generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
		"lint": "eslint .",
		"payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
		"start": "cross-env NODE_OPTIONS=--no-deprecation next start",
		"test": "echo 'Tests require running database. Use: docker-compose up -d && pnpm run test:local'",
		"test:local": "pnpm run test:integration && pnpm run test:e2e:local",
		"test:integration": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
		"test:e2e:local": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test"
	},
	"dependencies": {
		"@payloadcms/db-postgres": "3.77.0",
		"@payloadcms/next": "3.77.0",
		"@payloadcms/ui": "3.77.0",
		"dotenv": "17.3.1",
		"graphql": "^16.12.0",
		"next": "16.1.6",
		"payload": "3.77.0",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"sharp": "0.34.5"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.3",
		"@next/eslint-plugin-next": "^16.1.6",
		"@playwright/test": "1.58.2",
		"@testing-library/react": "16.3.2",
		"@types/node": "^25.3.0",
		"@types/react": "19.2.14",
		"@types/react-dom": "19.2.3",
		"@vitejs/plugin-react": "5.1.4",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"eslint": "^10.0.1",
		"eslint-config-next": "16.1.6",
		"jsdom": "28.1.0",
		"playwright": "1.58.2",
		"playwright-core": "1.58.2",
		"prettier": "^3.8.1",
		"rimraf": "^6.1.3",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.56.0",
		"vite-tsconfig-paths": "6.1.1",
		"vitest": "4.0.18"
	},
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=10.0.0"
	}
}
