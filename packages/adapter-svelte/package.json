{
	"name": "@ujl-framework/adapter-svelte",
	"version": "0.0.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm run prepack",
		"bundle-styles": "tailwindcss -i src/lib/styles/index.css -o dist/styles/bundle.css --minify",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && pnpm run bundle-styles && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:unit:ui": "vitest --ui",
		"test:unit:coverage": "vitest run --coverage",
		"test": "vitest run"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./styles": "./dist/styles/index.css",
		"./bundle.css": "./dist/styles/bundle.css"
	},
	"dependencies": {
		"@lucide/svelte": "^0.563.1",
		"@ujl-framework/types": "workspace:*",
		"@ujl-framework/ui": "workspace:*",
		"svelte-sonner": "^1.0.7"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/cli": "^4.1.18",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.0.10",
		"@ujl-framework/core": "workspace:*",
		"@ujl-framework/examples": "workspace:*",
		"@vitest/ui": "^4.0.18",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.1.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.3.17",
		"svelte": "^5.48.2",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.18"
	},
	"keywords": [
		"svelte"
	],
	"author": "mainzcript GbR",
	"homepage": "https://ujl-framework.org",
	"repository": {
		"type": "git",
		"url": "git+https://gitlab.mainzcript.eu/ujl-framework/ujl.git",
		"directory": "packages/adapter-svelte"
	},
	"license": "MIT"
}
