{
	"name": "@ujl-framework/core",
	"version": "0.0.1",
	"description": "UJL Core - The Heart of the UJL Framework",
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "pnpm run clean && tsc -b tsconfig.build.json",
		"check": "tsc --noEmit",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:unit:ui": "vitest --ui",
		"test:unit:coverage": "vitest run --coverage",
		"test": "vitest run",
		"clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true}); require('fs').rmSync('tsconfig.build.tsbuildinfo', {force:true})\""
	},
	"dependencies": {
		"@tiptap/starter-kit": "^3.19.0",
		"@ujl-framework/types": "workspace:*",
		"nanoid": "^5.1.6"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@types/node": "^25.2.0",
		"@ujl-framework/examples": "workspace:*",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^17.3.0",
		"prettier": "^3.8.1",
		"prettier-plugin-organize-imports": "^4.3.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vitest": "^4.0.18"
	},
	"author": "mainzcript GbR",
	"homepage": "https://ujl-framework.org",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mainzcript/ujl.git",
		"directory": "packages/core"
	}
}
