{
	"name": "@ujl-framework/crafter",
	"version": "0.0.1",
	"description": "UJL Crafter - Visual Editor for UJL Content",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest run",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:e2e": "playwright test",
		"test:all": "pnpm run test:unit && pnpm run test:e2e"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.2",
		"@internationalized/date": "^3.10.1",
		"@lucide/svelte": "^0.562.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@types/node": "^25.0.3",
		"@ujl-framework/adapter-svelte": "workspace:*",
		"@ujl-framework/core": "workspace:*",
		"@ujl-framework/examples": "workspace:*",
		"@ujl-framework/types": "workspace:*",
		"@ujl-framework/ui": "workspace:*",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.3.16",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.51.0",
		"vite": "^7.3.0",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.16"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource-variable/jetbrains-mono": "^5.2.8",
		"@fontsource-variable/merriweather": "^5.2.6",
		"@fontsource-variable/montserrat": "^5.2.8",
		"@fontsource-variable/noto-sans": "^5.2.10",
		"@fontsource-variable/nunito-sans": "^5.2.7",
		"@fontsource-variable/open-sans": "^5.2.7",
		"@fontsource-variable/oswald": "^5.2.8",
		"@fontsource-variable/raleway": "^5.2.8",
		"@fontsource-variable/roboto": "^5.2.9",
		"@tiptap/core": "^3.14.0",
		"@tiptap/pm": "^3.14.0",
		"@tiptap/starter-kit": "^3.14.0",
		"colorjs.io": "^0.6.0",
		"compressorjs": "^1.2.1",
		"svelte-sonner": "^1.0.7"
	}
}
