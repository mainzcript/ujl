{
	"name": "@ujl-framework/crafter",
	"version": "0.0.1",
	"description": "UJL Crafter - Visual Editor for UJL Content",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && pnpm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"test:run": "vitest run",
		"test:unit": "vitest",
		"test": "pnpm test:run",
		"test:e2e": "playwright test",
		"test:e2e:ci": "playwright test --reporter=list --reporter=junit",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:codegen": "playwright codegen http://localhost:5173"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.1",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.553.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24.10.1",
		"@ujl-framework/adapter-svelte": "workspace:*",
		"@ujl-framework/core": "workspace:*",
		"@ujl-framework/examples": "workspace:*",
		"@ujl-framework/types": "workspace:*",
		"@ujl-framework/ui": "workspace:*",
		"bits-ui": "^2.14.3",
		"clsx": "^2.1.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"publint": "^0.3.15",
		"svelte": "^5.43.6",
		"svelte-check": "^4.3.4",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.4",
		"vite": "^7.2.2",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@testing-library/svelte": "^5.2.3",
		"@vitest/ui": "^2.1.8",
		"@vitest/coverage-v8": "^2.1.8",
		"colorjs.io": "^0.5.2",
		"jsdom": "26.1.0",
		"vitest": "3.2.3",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/user-event": "^14.5.2"
	}
}
