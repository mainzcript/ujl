{
	"name": "@ujl-framework/crafter",
	"version": "0.0.1",
	"description": "UJL Crafter - Visual Editor for UJL Content",
	"scripts": {
		"dev": "concurrently -n tw,vite -c blue,green \"pnpm run build:tailwind:watch\" \"vite\"",
		"build": "pnpm run build:tailwind && vite build",
		"build:tailwind": "tailwindcss -i src/lib/styles/bundle.css -o src/lib/styles/_bundled.css --minify",
		"build:tailwind:watch": "tailwindcss -i src/lib/styles/bundle.css -o src/lib/styles/_bundled.css --watch --minify",
		"preview": "vite preview",
		"prepack": "pnpm run build && publint",
		"check": "svelte-check --tsconfig ./tsconfig.json --compiler-warnings \"options_missing_custom_element:ignore\"",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --compiler-warnings \"options_missing_custom_element:ignore\" --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:unit:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test": "vitest run && playwright test"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource-variable/jetbrains-mono": "^5.2.8",
		"@fontsource-variable/merriweather": "^5.2.6",
		"@fontsource-variable/montserrat": "^5.2.8",
		"@fontsource-variable/noto-sans": "^5.2.10",
		"@fontsource-variable/nunito-sans": "^5.2.7",
		"@fontsource-variable/open-sans": "^5.2.7",
		"@fontsource-variable/oswald": "^5.2.8",
		"@fontsource-variable/raleway": "^5.2.8",
		"@fontsource-variable/roboto": "^5.2.9",
		"@internationalized/date": "^3.10.1",
		"@lucide/svelte": "^0.562.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/cli": "^4.1.18",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@types/node": "^25.0.9",
		"@ujl-framework/adapter-svelte": "workspace:*",
		"@ujl-framework/core": "workspace:*",
		"@ujl-framework/examples": "workspace:*",
		"@ujl-framework/types": "workspace:*",
		"@ujl-framework/ui": "workspace:*",
		"bits-ui": "^2.15.4",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.0.0",
		"prettier": "^3.8.0",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.3.16",
		"svelte": "^5.47.0",
		"svelte-check": "^4.3.5",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.0",
		"vite": "^7.3.1",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^4.0.17"
	},
	"dependencies": {
		"@tiptap/core": "^3.15.3",
		"@tiptap/pm": "^3.15.3",
		"@tiptap/starter-kit": "^3.15.3",
		"colorjs.io": "^0.6.1",
		"compressorjs": "^1.2.1",
		"svelte-sonner": "^1.0.7"
	},
	"keywords": [
		"svelte",
		"ujl",
		"editor",
		"visual-editor"
	]
}
