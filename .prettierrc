{
	"useTabs": true,
	"printWidth": 100,
	"endOfLine": "lf",
	"plugins": [
		"prettier-plugin-svelte",
		"prettier-plugin-tailwindcss",
		"prettier-plugin-organize-imports"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": "packages/ui/**/*.{svelte,ts,js,css}",
			"options": {
				"tailwindStylesheet": "packages/ui/src/lib/styles/index.css"
			}
		},
		{
			"files": "packages/crafter/**/*.{svelte,ts,js,css}",
			"options": {
				"tailwindStylesheet": "packages/crafter/src/dev/app.css"
			}
		}
	]
}
