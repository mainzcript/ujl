{
	"name": "ujl-monorepo",
	"version": "0.0.1",
	"description": "Unified JSON Layout Framework - The Open-Source Web-Builder of the Future",
	"private": true,
	"workspaces": [
		"packages/*",
		"apps/*",
		"services/*"
	],
	"packageManager": "pnpm@10.26.2",
	"scripts": {
		"build": "pnpm run demo:build && pnpm --filter @ujl-framework/crafter build && pnpm run docs:build",
		"format": "pnpm -r run format",
		"lint": "pnpm -r run lint",
		"check": "pnpm -r run check",
		"test": "pnpm -r run test",
		"clean": "pnpm -r run clean && rimraf node_modules",
		"types:build": "pnpm --filter @ujl-framework/types build",
		"core:build": "pnpm types:build && pnpm --filter @ujl-framework/core build",
		"ui:build": "pnpm run core:build && pnpm --filter @ujl-framework/ui build",
		"adapter-svelte:build": "pnpm run ui:build && pnpm --filter @ujl-framework/adapter-svelte build",
		"adapter-web:build": "pnpm run adapter-svelte:build && pnpm --filter @ujl-framework/adapter-web build",
		"demo:build": "pnpm run adapter-web:build && pnpm --filter @ujl-framework/demo build",
		"docs:build": "pnpm --filter @ujl-framework/docs build",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "changeset publish",
		"rtc": "pnpm install && pnpm run format && pnpm run build && pnpm run lint && pnpm run check && pnpm run test"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@types/node": "^25.0.3",
		"@typescript-eslint/eslint-plugin": "^8.51.0",
		"@typescript-eslint/parser": "^8.51.0",
		"eslint": "^9.39.2",
		"prettier": "^3.7.4",
		"rimraf": "^6.1.2",
		"typescript": "^5.9.3",
		"vite": "^7.3.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=10.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"sharp",
			"unrs-resolver"
		],
		"ignoredBuiltDependencies": [
			"@parcel/watcher"
		]
	}
}
