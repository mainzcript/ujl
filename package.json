{
	"name": "ujl-monorepo",
	"version": "0.0.1",
	"description": "Unified JSON Layout Framework - The Open-Source Web-Builder of the Future",
	"private": true,
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"packageManager": "pnpm@10.18.1",
	"scripts": {
		"build": "pnpm run demo:build",
		"dev": "pnpm -r run dev",
		"format": "pnpm -r run format",
		"lint": "pnpm -r run lint",
		"check": "pnpm -r run check",
		"test": "pnpm -r run test",
		"clean": "pnpm -r run clean && rm -rf node_modules",
		"ui:dev": "pnpm --filter @ujl-framework/ui dev",
		"ui:build": "pnpm --filter @ujl-framework/ui build",
		"ui:storybook": "pnpm --filter @ujl-framework/ui storybook",
		"ui:build-storybook": "pnpm --filter @ujl-framework/ui build-storybook",
		"demo:dev": "pnpm run ui:build && pnpm --filter @ujl-framework/demo dev",
		"demo:build": "pnpm run ui:build && pnpm --filter @ujl-framework/demo build",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "changeset publish",
		"rtc": "pnpm install && pnpm run format && pnpm run build && pnpm run lint && pnpm run check"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.7.0",
		"@typescript-eslint/eslint-plugin": "^8.46.0",
		"@typescript-eslint/parser": "^8.46.0",
		"eslint": "^9.37.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"vite": "^7.1.9"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=10.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
