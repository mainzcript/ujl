{
	"name": "ujl-monorepo",
	"version": "0.0.1",
	"description": "Unified JSON Layout Framework - The Open-Source Web-Builder of the Future",
	"private": true,
	"workspaces": [
		"packages/*",
		"apps/*",
		"services/*"
	],
	"packageManager": "pnpm@10.20.0",
	"scripts": {
		"build": "pnpm run adapter-svelte:build && pnpm run docs:build",
		"format": "pnpm -r run format",
		"lint": "pnpm -r run lint",
		"check": "pnpm -r run check",
		"clean": "pnpm -r run clean && rm -rf node_modules",
		"docs:build": "pnpm --filter @ujl-framework/docs build",
		"adapter-svelte:build": "pnpm run core:build && pnpm run ui:build && pnpm --filter @ujl-framework/adapter-svelte build",
		"core:build": "pnpm --filter @ujl-framework/core build",
		"ui:build": "pnpm --filter @ujl-framework/ui build",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "changeset publish",
		"rtc": "pnpm install && pnpm run format && pnpm run build && pnpm run lint && pnpm run check"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.9.1",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"eslint": "^9.38.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"vite": "^7.1.12"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=10.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"sharp",
			"unrs-resolver"
		]
	}
}
